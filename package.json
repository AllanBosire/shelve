{
  "name": "shelve",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "automd && turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "turbo": "latest",
    "typescript": "5.4.3"
  },
  "engines": {
    "node": ">=18.19.1"
  },
  "packageManager": "bun@1.0.30",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "chore",
          "docs",
          "feat",
          "fix",
          "refactor",
          "revert",
          "test",
          "other"
        ]
      ]
    }
  }
}
